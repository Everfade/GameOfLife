            <ColumnDefinition Width="31"/>
            <ColumnDefinition Width="31"/>
            <ColumnDefinition Width="31"/>
            <ColumnDefinition Width="31"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="108" Click="StartButton_Click" Grid.ColumnSpan="4" Grid.Column="4" Grid.Row="21" Height="40" BorderBrush="Black" FontSize="15"  />
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="3,10,0,0" VerticalAlignment="Top" Width="111" Grid.Column="12" Grid.ColumnSpan="4" Grid.Row="21" Height="40" Click="ResetButton_Click" BorderBrush="Black" FontSize="15"/>
        <Label Content="Rules" HorizontalAlignment="Left" Margin="14,59,0,0" Grid.Row="21" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Column="18" MouseLeftButtonDown="Label_MouseLeftButtonDown_1"/>
        <CheckBox x:Name="loopCB" Content="Loop" HorizontalAlignment="Left" Margin="5,24,0,0" Grid.Row="21" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="29" Width="83" Grid.Column="1"/>
        <Label x:Name="MessageLable" Content="" Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="20" VerticalAlignment="Top" Grid.ColumnSpan="13" Width="383"/>


    </Grid>
</Window>
